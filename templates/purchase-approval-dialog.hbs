<form>
  <div class="dialog-content">
    <div class="dialog-header">
      <h3><i class="fas fa-shopping-cart"></i> Approve Purchase</h3>
      <p><strong>{{actorName}}</strong> ({{userName}}) wants to purchase:</p>
    </div>

    <div class="item-list-section">
      <h4>Items:</h4>
      <ul class="dialog-item-list">
        {{#each items}}
        <li>{{quantity}}x {{name}} - {{formatCurrency price}}</li>
        {{/each}}
      </ul>
    </div>

    <div class="total-section">
      <p><strong class="boi-destaque-forte">Total:</strong> <span class="total-cost">{{formatCurrency totalCost}}</span></p>
    </div>
  </div>

  <div class="form-group dialog-buttons">
    <button type="button" class="primary" data-action="approve">
      <i class="fas fa-check"></i> Approve
    </button>
    <button type="button" class="secondary" data-action="decline">
      <i class="fas fa-times"></i> Decline
    </button>
  </div>
</form>